<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicShop.styles.css" asp-append-version="true" />
</head>
<body class="bg-info bg-opacity-50">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black bg-opacity-25 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">MusicShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item text-dark nav-link">
                            @{
                                Context.Request.Cookies.TryGetValue("UserType", out string? userType);
                                if (userType != null)
                                {
                                    Context.Request.Cookies.TryGetValue("Username", out string? UserName);
                                    <text>Hello, @UserName</text>
                                }
                            }
                            </li>
                        <li class="nav-item">
                                @{
                                    if (userType != null)
                                    {
                                    <a class="nav-link text-light" asp-area="" asp-controller="Logout" asp-action="Index">Logout</a>
                                    }
                                    else
                                    {
                                    <a class="nav-link text-light" asp-area="" asp-controller="Logon" asp-action="Index">Login</a>
                                }
                                }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="BrowseMusic" asp-action="Index">Browse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                        <li class="nav-item">
                            @{
                                if (userType != null)
                                {
                                <a class="nav-link text-light" asp-area="" asp-controller="Checkout" asp-action="Index">Checkout</a>
                                }
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-light bg-opacity-50">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <div>
    <footer class="border-top footer text-light text-opacity-75 text-center bg-black bg-opacity-25">
        <div class="container line">
            <p class="small">
            &copy; 2023 - MusicShop<br />
            Travis Kunkel - Travis.Kunkel@ndsu.edu<br />
            Brady Vogt - Brady.Vogt@ndsu.edu
            </p>
        </div>
    </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
